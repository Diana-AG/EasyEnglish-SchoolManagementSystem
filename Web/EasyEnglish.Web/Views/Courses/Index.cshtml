@model EasyEnglish.Web.ViewModels.CourseTypes.CourseTypeListViewModel
@{
    this.ViewData["Title"] = "Courses";
}
<div class="container-fluid">
    <div class="row">
        @foreach (var course in Model.CourseTypes)
        {
        <div class="col-lg-8 offset-md-2" >
                <div class="card mb-3" style="max-width: 1440px;">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/images/courseTypes/course-type.jpg" class="img-fluid rounded-start" alt="...">
                    </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-10">
                        <h5 class="card-title">@course.LanguageName @course.LevelName</h5>
                            </div>
                            <div class="col">
                                <i class="fas fa-star" style="color:#efcc00"></i>
                                <p class="text-muted">5/5</p>
                            </div>
                        </div>                        
                        <p class="card-text">@course.Description.Substring(0, @Math.Min(400, @course.Description.Length))...</p>
                        <button type="button" class="btn btn-secondary">See more</button>
                    </div>
                </div>
                </div>
            </div>
        </div>        
        }
    </div>
</div>
