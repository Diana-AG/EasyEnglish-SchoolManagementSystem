@using EasyEnglish.Common
@model EasyEnglish.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<div style="background: url(/images/portfolio/index.jpg)" class="page-holder bg-cover">

  <div class="container py-5">
    <header class="text-center text-white py-5">
      <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
      <p class="lead mb-0">With languages, you are at home anywhere.</p>
      <p class="font-italic">- Edward De Waal 
      </p>
    </header>
  </div>
</div>
<hr></hr>
<div class="text-center">
    <div class="col-md-4 offset-md-4">
        <h5>We have:</h5>
        <div class="shadow p-3 mb-5 bg-body rounded">
            <ul class="list-group" class="shadow p-3 mb-5 bg-body rounded">
            <li class="list-group-item">Courses: @Model.CoursesCount</li>
            <li class="list-group-item">Teachers: @Model.TeachersCount</li>
            <li class="list-group-item">Students: @Model.StudentsCount</li>
            <li class="list-group-item">Languages: @Model.LanguagesCount</li>
        </ul>
        </div>
        
    </div>
</div>