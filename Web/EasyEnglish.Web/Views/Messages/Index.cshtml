@model EasyEnglish.Web.ViewModels.Messages.MessageListViewModel

@{
    this.ViewData["Title"] = "Messages";
}
<div class="container" style="padding: 25px;">
@foreach (var message in Model.Messages)
{
    <a class="" asp-controller="Messages" asp-action="" asp-route-id="@message.Id" style="padding: 25px;">
        <div class="card-panel hoverable grey lighten-5 z-depth-1">
            <div class="row">
                <div class="col s2">
                    <img src="@message.AddedByUser.ProfilePicture" alt="" class="circle responsive-img">
                    <p>@message.AddedByUser.Name</p>
                </div>
                <div class="col s9">
                    <header>
                        <h5>@message.StartDate</h5>
                    </header>
                    <span class="black-text">
                @message.Description
                    </span>
                </div> 
                <div class="col s1">
                    <span class="black-text">
                        <i class="material-icons amber-text text-lighten-1">star</i>
                @if (message.StartDate <= DateTime.Now)
                {
                                <label>5.0/5.0</label>
                }
                else
                {
                                <label>Няма отзиви</label>
                }
                    </span>
                </div>
            </div>
        </div>
    </a>
}
</div>
