@model EasyEnglish.Data.Models.Resource

@{
    ViewData["Title"] = "Resource Details";
}

<h1>@this.ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="AddCourseType">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Add Course Type" class="btn btn-primary" /> |
        <a asp-action="Index">Back to All Resources</a>
    </form>
    <a asp-action="AddCourseType" asp-route-id="@Model.Id">Add Course Type</a>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to All Resources</a>
</div>
