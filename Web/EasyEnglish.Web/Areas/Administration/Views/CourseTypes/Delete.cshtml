@model EasyEnglish.Web.ViewModels.Administration.CourseTypes.CourseTypeViewModel

@{
    ViewData["Title"] = "Delete Course Type";
}

<h4>Are you sure you want to delete this Course Type</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LanguageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LanguageName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LevelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LevelName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to All Course Types</a>
    </form>
</div>
